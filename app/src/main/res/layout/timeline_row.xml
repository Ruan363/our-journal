<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_4dp"
            android:layout_marginRight="@dimen/default_4dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <View
                android:id="@+id/viewLeftDivider"
                android:layout_width="@dimen/timeline_horizontal_divider_width"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/default_4dp"
                android:layout_marginRight="@dimen/default_4dp"
                android:background="@color/black"/>

            <View
                android:id="@+id/viewLeftDividerBottom"
                android:layout_width="@dimen/timeline_horizontal_divider_width_third"
                android:layout_height="2dp"
                android:layout_marginLeft="@dimen/default_4dp"
                android:layout_marginRight="@dimen/default_4dp"
                android:background="@color/black"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvPostDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            tools:text="2 Sept"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_4dp"
            android:layout_marginRight="@dimen/default_4dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <View
                android:id="@+id/viewRightDivider"
                android:layout_width="@dimen/timeline_horizontal_divider_width"
                android:layout_height="1dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@color/black"/>

            <View
                android:id="@+id/viewRightDividerBottom"
                android:layout_width="@dimen/timeline_horizontal_divider_width_third"
                android:layout_height="2dp"
                android:layout_marginLeft="@dimen/default_4dp"
                android:layout_marginRight="@dimen/default_4dp"
                android:layout_gravity="end"
                android:background="@color/black"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/cardLeftPost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/default_4dp"
            android:maxLines="4"
            android:ellipsize="end"
            tools:text="@string/test_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_4dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvLeftPostTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_8dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    tools:text="@string/test_title"/>

                <TextView
                    android:id="@+id/tvLeftPostContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="4"
                    android:ellipsize="end"
                    tools:text="@string/test_content"/>

                <ImageView
                    android:id="@+id/imgLeftPicture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <View
            android:id="@+id/viewCenterDivider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/black"/>

        <android.support.v7.widget.CardView
            android:id="@+id/cardRightPost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/default_4dp"
            android:maxLines="4"
            android:ellipsize="end"
            tools:text="@string/test_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_4dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvRightPostTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_8dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    tools:text="@string/test_title"/>

                <TextView
                    android:id="@+id/tvRightPostContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="4"
                    android:ellipsize="end"
                    tools:text="@string/test_content"/>

                <ImageView
                    android:id="@+id/imgRightPicture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_16dp"
                    android:visibility="gone"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>